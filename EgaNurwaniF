class Hewan(object):
	def __init__ (self, k, u, k):
		self.kelinci = k
		self.ular = u
		self.kuda = k

	def jumlahHewan(self):
		return self.kelinci + self.ular + self.kuda

	def cetakData(self):
		print("kelinci\t: ", self.kelinci)
		print("ular\t: ", self.ular)
		print("kuda\t: ", self.kuda)

	def cetakJH(self):
		print("Total dari semua hewan diatas\t= ", self.jumlahHewan())

class WarnaHewan(Hewan):
	def __init__(self, k, u, k, w):
		self.kelinci = k 
		self.ular = u 
		self.kuda = k 
		self.warna = w 
	def cetakData(self):
		print("kelinci\t: ", self.kelinci)
		print("ular\t: ", self.ular)
		print("kuda\t: ", self.kuda)
		print("Warna dari semua hewan tersebut adalah", self.warna)

def main():
	wh1 = WarnaHewan (37, 33,25, "merah")

	wh1.cetakData()
	wh1.cetakJH()

if __name__ == "__main__":
	main()
